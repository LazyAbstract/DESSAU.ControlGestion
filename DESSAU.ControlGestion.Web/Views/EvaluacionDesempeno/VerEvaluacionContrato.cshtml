@model DESSAU.ControlGestion.Core.EvaluacionContrato

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h4>
                    <i class="fa fa-line-chart" aria-hidden="true"></i> Evaluación de Contrato @Html.ActionLink("Exportar PDF", "ExportarEvaluacionContratoPDF", new { IdEvaluacionContrato = Model.IdEvaluacionContrato }, new { @class = "btn btn-default" })
                </h4>
            </div>
            <table class="table table-bordered tabla-detalle">
                <tr>
                    <th>
                        SERVICIO
                    </th>
                    <td>
                        @Model.Contrato.Nombre
                    </td>
                </tr>
                <tr>
                    <th>
                        PERIODO EVALUACIÓN
                    </th>
                    <td>
                        @Html.CalculaPeriodo(Model.FechaEvaluacion.Month, Model.FechaEvaluacion.Year)
                    </td>
                </tr>
                <tr>
                    <th>
                        FECHA EVALUACIÓN
                    </th>
                    <td>
                        @String.Format("{0}", Model.FechaCreacion.ToShortDateString())
                    </td>
                </tr>
            </table>            
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.Label("HABILIDADES")
                    </th>
                    @*<th>
                        @Html.Label("DEFINICION")
                    </th>*@
                    <th>
                        @Html.Label("VALOR OBTENIDO")
                    </th>
                </tr>
                @{int i = 0;}
                @foreach (var pregunta in Model.EvaluacionContratoPreguntas.OrderBy(x => x.IdPregunta))
                {
                    <tr>
                        <td>
                            <p>@pregunta.Pregunta.Habilidad</p>
                        </td>
                        @*<td>
                            <p>@pregunta.Pregunta.FormulacionPregunta</p>
                        </td>*@
                        <td>
                            <p class="text-center">@String.Format("{0:P2}", pregunta.ValorObtenidoPorcentual)</p>
                        </td>
                    </tr>
                }
            </table>
            <table class="table table-bordered tabla-detalle">
               
                <tr>
                    <th>
                        PROMEDIO CONTRATO (30%)
                    </th>
                    <td>
                        @String.Format("{0:P2}", Model.PromedioContrato)
                    </td>
                </tr>
                <tr>
                    <th>
                        DESEMPEÑO (70%)
                    </th>
                    <td>
                        @String.Format("{0:P2}", Model.PromedioDesempeno)
                    </td>
                </tr>
                <tr>
                    <th>
                        PROMEDIO TOTAL (ND)
                    </th>
                    <td>
                        @String.Format("{0:P2}", Model.PromedioPorcentual)
                    </td>
                </tr>
                <tr>
                    <th>
                        TOTAL FACTOR DESEMPEÑO
                    </th>
                    <td>
                        @String.Format("{0:N2}", Model.FactorDesempeno)
                    </td>
                </tr>
                
            </table>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h5>Factor Total Desempeño</h5>
            </div>
            <table class="table">
                <tr>
                    <th>
                        95 < ND <= 100
                    </th>
                    <td>
                        1,00
                    </td>
                </tr>
                <tr>
                    <th>
                        90 < ND <= 95
                    </th>
                    <td>
                        0,99
                    </td>
                </tr>
                <tr>
                    <th>
                        85 < ND <= 90
                    </th>
                    <td>
                        0,98
                    </td>
                </tr>
                <tr>
                    <th>
                        80 < ND <= 85
                    </th>
                    <td>
                        0,97
                    </td>
                </tr>
                <tr>
                    <th>
                        75 < ND <= 80
                    </th>
                    <td>
                        0,96
                    </td>
                </tr>
                <tr>
                    <th>
                        70 < ND <= 75
                    </th>
                    <td>
                        0,95
                    </td>
                </tr>
                <tr>
                    <th>
                        60 < ND <= 70
                    </th>
                    <td>
                        0,93
                    </td>
                </tr>
                <tr>
                    <th>
                        50 < ND <= 60
                    </th>
                    <td>
                        0,92
                    </td>
                </tr>
                <tr>
                    <th>
                        0 < ND <= 50
                    </th>
                    <td>
                        0,90
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

