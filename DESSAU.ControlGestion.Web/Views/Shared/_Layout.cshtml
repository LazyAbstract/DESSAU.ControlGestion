<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        $(function () {

            $.url = function (url) {
                {
                    var path = '@Request.ApplicationPath'

                    if (path != '/')
                        path = path + '/'

                    return path + url;
                }
            }

            $.ajax({
                'async': false,
                'global': false,
                url: '@Url.Action("GetNotificaciones","Base")',
                data: { 'soloNumero': true },
                success: function (data) {
                    $('#numero_notificaciones').html(data.numero);
                    $('#numero_notificaciones').toggle(data.numero != '0');
                }
            });

            $('#notificaciones').popover(
                {
                    trigger: 'click',
                    container: 'body',
                    'placement': 'bottom',
                    content: function () {
                        var json = null;
                        $.ajax({
                            'async': false,
                            'global': false,
                            url: '@Url.Action("GetNotificaciones","Base")',
                            data: { 'soloNumero': false },
                            success: function (data) {
                                json = data;
                            }
                        });
                        $('#numero_notificaciones').toggle(json.numero != '0');
                        $('#numero_notificaciones').html(json.numero);
                        return json.contenido;
                    },
                    //title: '<h5>Notificaciones</h5>',
                    html: true
                });

            $('body').on('click', function (e) {
                $('[data-toggle=popover]').each(function () {
                    // hide any open popovers when the anywhere else in the body is clicked
                    if (!$(this).is(e.target) && $(this).has(e.target).length === 0 && $('.popover').has(e.target).length === 0) {
                        $(this).popover('hide');
                    }
                });
            });
        })
        function CambiarEstadoNotificacion(id, tpo) {
            $.ajax({
                'async': false,
                'global': false,
                url: '@Url.Action("CambiarEstadoNotificacion", "Base")',
                data: { 'idNotificacion': id, 'tiempo': tpo },
                success: function (data) {
                    $('#notificaciones').popover('show');
                    $('#numero_notificaciones').toggle(data.numero != '0');
                    $('#numero_notificaciones').html(data.numero);


                }
            });
        }
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("DESSAU - Control HH", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/images/dessau_logo.png")" alt="Home" height="35" style="margin-top:10px"/></a>
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Usuarios", "ListarUsuario", "Usuario")</li>

                        <li class="dropdown">
                            <a href="#" id="notificaciones" class="dropdown-toggle popup-marker" data-toggle="dropdown">
                                <i class="pe-7s-bell" style="font-size: 30px; position: relative;">
                                    <span class="label label-danger" style="font-size:10px;position: absolute;right: -15px;top: -5px;" id="numero_notificaciones">-</span>
                                </i>
                            </a>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="pe-7s-user" style="font-size:30px; position: relative;"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#" class="" data-toggle="">@User.Identity.Name</a></li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Cambiar Contraseña", "ChangePassword", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                                <li>
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <a class="menu-item-salir" href="javascript:document.getElementById('logoutForm').submit()">Salir</a>
                                    }
                                </li>
                            </ul>
                        </li>
                    </ul>
                }                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (TempData["Mensaje"] != null)
        {
            <div style="color: white; text-align: center; font-weight: bold; font-size: larger; background-color: #009ce0;" class="fadeout-5">
                @TempData["Mensaje"].ToString()
            </div>
        }
        <br />
        @RenderBody()
    </div>
    <div class="navbar navbar-default navbar-fixed-bottom">
        <div class="navbar-inner">
            <div class="container">
                <p class="navbar-text pull-right">
                    <a class="brand" href="http://www.commonabstract.cl" target="_blank">
                        <img src="@Url.Content("~/Content/imagenes/no-logo.jpg")" />
                    </a>
                </p>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
